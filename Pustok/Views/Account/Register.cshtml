@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
                <!-- Login Form s-->
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">New Customer</h4>
                        <p><span class="font-weight-bold">I am a new User</span></p>
                        <div class="row">
                            <div class="col-12 mb--20">
                                <label asp-for="Name"></label>
                                <input class="mb-0 form-control" asp-for="Name" placeholder="Enter Your Email Address Here..">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="SurName"></label>
                                <input class="mb-0 form-control" asp-for="SurName" placeholder="Enter Your Email Address Here..">
                                <span asp-validation-for="SurName" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="UserName"></label>
                                <input class="mb-0 form-control" asp-for="UserName" placeholder="Enter Your Email Address Here..">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="Email"></label>
                                <input class="mb-0 form-control" asp-for="Email" placeholder="Enter Your Email Address Here..">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="Password"></label>
                                <input class="mb-0 form-control" asp-for="Password" placeholder="Enter Your Email Address Here..">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="ConfirmPassword"></label>
                                <input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Enter Your Email Address Here..">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                <form action="https://demo.hasthemes.com/pustok-preview/pustok/">
                    <div class="login-form">
                        <h4 class="login-title">Returning Customer</h4>
                        <p><span class="font-weight-bold">I am a returning customer</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label for="email">Enter your email address here...</label>
                                <input class="mb-0 form-control" type="email" id="email1"
                                       placeholder="Enter you email address here...">
                            </div>
                            <div class="col-12 mb--20">
                                <label for="password">Password</label>
                                <input class="mb-0 form-control" type="password" id="login-password" placeholder="Enter your password">
                            </div>
                            <div class="col-md-12">
                                <a href="#" class="btn btn-outlined">Login</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
@section Script{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}

